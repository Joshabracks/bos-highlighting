{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "bos",
	"patterns": [
		{
			"include": "#define"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#bool"
		},
		{
			"include": "#key"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"define": {
			"patterns": [
				{
					"name": "entity.name.tag.bos",
					"match": "(>|<~~~|<~~|<~|<)"
				},
				{
					"name": "support.type.bos",
					"match":  "(?<=^\\s+(:*?\\[*?\\w+\\]*?|\\[<\\w+>\\])\\s+?)\\w+$"
				},
				{
					"name": "support.type.bos",
					"match": "=\\w+"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.bos",
					"match": "^(@|%)\\w+\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.bos",
			"patterns": [
				{
					"name": "string.bos",
					"match": "\\b\\w+\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.bos",
					"match": "\\b\\d+\\b"
				}
			]
		},
		"bool": {
			"patterns": [
				{
					"name": "entity.name.tag.bos",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"key": {
			"patterns": [
				{
					"name": "variable.name.bos",
					"match": "\\w+(?=:)"
				},
				{
					"name": "entity.bos",
					"match": "(?<=<~~~|<~~|<~|<)[^<>]+(?=>)"
				},
				{
					"name": "variable.name.bos",
					"match": "^\\s+:*?\\[*?\\w+\\]*?"
				}
			]
		}
	},
	"scopeName": "source.bos"
}